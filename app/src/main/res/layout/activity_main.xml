<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iconImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/panda_sign"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"/>
        <ImageView
            android:id="@+id/personImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_sign"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/titleTv"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/hudongImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hudong_sign"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/personImg"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:id="@+id/container"

        android:layout_weight="1"></com.zhy.autolayout.AutoFrameLayout>

    <RadioGroup
        android:id="@+id/homeBottomGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/homePage"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/tab_home_normal"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:gravity="center"
            android:checked="true"
            android:background="@drawable/main"
            android:text="首页"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/homePandaLive"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/tab_panda_live_normal"
            android:text="熊猫直播"
            android:background="@drawable/main"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/homeRollVideo"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:button="@null"
            android:background="@drawable/main"
            android:gravity="center"
            android:drawableTop="@drawable/tab_panda_culture_normals"
            android:text="熊猫文化"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/homePandaBroadcast"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:button="@null"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:background="@drawable/main"
            android:gravity="center"
            android:drawableTop="@drawable/tab_panda_eye_normal"
            android:text="熊猫观察"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/homeLiveChina"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_live_china_normal"
            android:button="@null"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:gravity="center"
            android:background="@drawable/main"
            android:text="直播中国"
            android:textSize="12sp"
            />
    </RadioGroup>

</com.zhy.autolayout.AutoLinearLayout>
